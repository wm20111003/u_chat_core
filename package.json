{
  "name": "gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && yarn run tsc -p tsconfig.build.json",
    "postbuild": "yarn run copy-file && rm -rf dist/tsconfig.build.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "DEBUG=socket.io:client* tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "pm2-runtime ./dist/main.js -i 0 --name gateway --raw",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prestart:dev": "yarn run copy-file",
    "copy-file": "mkdir -p dist/common/microservice && cp -rf src/common/microservice/protos dist/common/microservice/ && cp -rf src/common/locales dist/common/",
    "migrate:create": "typeorm migration:create -n",
    "migrate:up": "typeorm migration:run",
    "migrate:down": "typeorm migration:revert",
    "pm2": "pm2"
  },
  "dependencies": {
    "@alicloud/pop-core": "1.7.9",
    "@grpc/proto-loader": "0.5.3",
    "@nestjs/common": "6.10.14",
    "@nestjs/core": "6.10.14",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/microservices": "6.10.14",
    "@nestjs/platform-fastify": "6.10.14",
    "@nestjs/platform-socket.io": "6.10.14",
    "@nestjs/typeorm": "6.2.0",
    "@nestjs/websockets": "6.10.14",
    "@types/socket.io": "2.1.4",
    "@types/node": "12.12.24",
    "@sentry/node": "5.11.0",
    "ali-oss": "6.4.0",
    "cache-manager": "2.10.1",
    "cache-manager-ioredis": "1.0.1",
    "co": "4.6.0",
    "dayjs": "1.8.19",
    "dotenv": "8.2.0",
    "grpc": "1.24.2",
    "i18n": "0.8.4",
    "jpush-async": "4.0.3",
    "lodash": "4.17.15",
    "nanoid": "2.1.9",
    "nest-winston": "1.3.1",
    "pg": "7.17.0",
    "pinyin": "2.9.0",
    "pm2": "4.2.1",
    "rate-limiter-flexible": "1.2.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4",
    "socket.io-emitter": "3.1.1",
    "socket.io-msgpack-parser": "2.2.0",
    "socket.io-redis": "5.2.0",
    "typeorm": "0.2.25",
    "typescript": "3.7.4",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "6.10.14",
    "@types/cache-manager": "2.10.1",
    "@types/i18n": "0.8.6",
    "@types/ioredis": "4.14.3",
    "@types/jest": "24.0.25",
    "@types/lodash": "4.14.149",
    "@types/nanoid": "2.1.0",
    "@types/pinyin": "2.8.1",
    "@types/socket.io-redis": "1.0.25",
    "@types/supertest": "2.0.8",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "ts-node": "8.5.4",
    "tsc-watch": "4.0.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
